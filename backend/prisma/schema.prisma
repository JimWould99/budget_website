generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LastChecked{
    id String @id @default(uuid())
    date DateTime 
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  budgets Budget[]
  expenses Expense[]
}

model Budget{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  name String
  amount Int
  user Users @relation(fields: [userId], references: [id])
  userId String
  expenses Expense[]
}

model Expense{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  name String
  amount Int
  budget Budget @relation(fields: [budgetId], references: [id])
  budgetId String
  user Users @relation(fields: [userId], references: [id])
  userId String
}